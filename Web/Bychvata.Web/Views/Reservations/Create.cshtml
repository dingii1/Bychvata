@using Bychvata.Web.ViewModels.Models.Reservations
@model ReservationCreateBindingModel

@{
    ViewData["Title"] = "Създаване на резервация";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Arrival" class="control-label">Пристигане:</label>
                <input asp-for="Arrival" type="date" value="@Model.Arrival.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="Arrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departure" class="control-label">Заминаване:</label>
                <input asp-for="Departure" type="date" value="@Model.Departure.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="Departure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Бележки:</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Допълнителни услуги:</label>
                @foreach(var addition in @Model.Additions)
                {
                    <div>
                        <input type="checkbox" asp-for="@addition.IsIncluded" />
                        <label asp-for="@addition.IsIncluded">@addition.Name</label>
                        <input type="hidden" asp-for="@addition.Id" />
                        <input type="hidden" asp-for="@addition.Name" />
                        <input type="hidden" asp-for="@addition.Price" />
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Резервирай" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <img src="~/20180710_181630.jpg" style="width:100%" height="600">
    </div>
</div>
