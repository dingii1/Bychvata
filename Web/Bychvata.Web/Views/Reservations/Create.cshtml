@using Bychvata.Web.ViewModels.Models.BindingModels
@model ReservationCreateBindingModel

@{
    ViewData["Title"] = "Create";
    string arrival = ViewData["Arrival"].ToString();
    string departure = ViewData["Departure"].ToString();
}

<h1>Create</h1>

<h4>ReservationCreateBindingModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Arrival" class="control-label">Пристигане:</label>
                <input asp-for="Arrival" type="date" value="@arrival" class="form-control" />
                <span asp-validation-for="Arrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departure" class="control-label">Заминаване:</label>
                <input asp-for="Departure" type="date" value="@departure" class="form-control" />
                <span asp-validation-for="Departure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Бележки:</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" value="Резервирай" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

